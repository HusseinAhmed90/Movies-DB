<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
	app:startDestination="@id/moviesListFragment">
	
	<fragment
        android:id="@+id/moviesListFragment"
        android:name="com.example.moviesdb.views.MoviesListFragment"
        android:label="MoviesListFragment"
        tools:layout="@layout/fragment_movies_list">
		
		<action
            android:id="@+id/action_moviesListFragment_to_movieDetailsFragment"
            app:destination="@+id/movieDetailsFragment"		
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
	
	</fragment>
	
	<fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.moviesdb.views.MovieDetailsFragment"
        android:label="MovieDetailsFragment"
        tools:layout="@layout/fragment_list">
		
		<argument
			android:name="movie"
			app:argType="com.example.moviesdb.core.data.MovieT" />
		
    </fragment>

</navigation>